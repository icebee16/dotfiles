## alias for linux
alias 'ls'='ls -G --color'
alias 'la'='ls -aG --color'
alias 'll'='ls -alG --color'

### ZPLUG_HOME
# install by brew
export ZPLUG_HOME=/usr/local/opt/zplug

### brew cask 
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# for coc.nvim, clangd
export PATH="/usr/local/opt/llvm/bin:$PATH"
